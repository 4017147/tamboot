<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.tamboot.mybatis.test.mapper.UserInfoMapper">
    <resultMap type="com.tamboot.mybatis.test.model.UserInfoModel" id="Model"></resultMap>
    
    <select id="selectOne" resultMap="Model">
        select
            *
        from user_info
        where id=#{id}
        limit 0,1
    </select>
    
    <select id="selectAll" resultMap="Model">
        select
            *
        from user_info
    </select>
    
    <select id="page" resultMap="Model">
        select
            *
        from user_info
    </select>
    
    <insert id="insert">
        insert into user_info (
            username,
            password
        ) values (
            #{username},
            #{password}
        )
    </insert>
    
    <delete id="delete">
        delete from user_info where id = #{id}
    </delete>
    
     <delete id="deleteByUsername">
        delete from user_info where username = #{username}
    </delete>
    
    <update id="update">
        update user_info set
            username = #{username},
            password = #{password}
        where id = #{id}
    </update>

</mapper>